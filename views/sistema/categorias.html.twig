{% extends "sistema/layoutLogado.html.twig" %}
{% block content %}
    <section class="container">

		<div class="cadastros">
			<div class="header">
				<h3>Cadastro de Categorias</h3>
			</div>

			<div class="conteudo">

				<p><a class="icon-novo" href="cadastro-categoria">Nova Categoria</a></p>

				<table>
					<thead>
						<tr>
							<th>ID</th>
							<th>Nome</th>
							<th>Descrição</th>
							<th>Ações</th>
						</tr>
					</thead>
					<tbody>
						{% for categoria in categorias %}
						<tr>
							<th>{{ categoria.id }}</th>
							<th>{{ categoria.nome }}</th>
							<th>{{ categoria.descricao }}</th>
							<th>Editar / Excluir</th>
						</tr>
						{% endfor %}
					</tbody>
				</table>

			</div>

		</div>

    </section>
{% endblock %}